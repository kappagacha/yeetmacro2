<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:YeetMacro2.ViewModels"
             xmlns:pvm="clr-namespace:YeetMacro2.Platforms.Android.ViewModels"
             xmlns:conv="clr-namespace:YeetMacro2.Converters"
             xmlns:cntl="clr-namespace:YeetMacro2.Controls"
             xmlns:av="clr-namespace:YeetMacro2.Platforms.Android.Views"
             x:DataType="pvm:ActionViewModel"
             vm:ViewModelLocator.ViewModelType="{x:Type pvm:ActionViewModel}"
             xmlns:xct="clr-namespace:Xamarin.CommunityToolkit.Effects"
             xmlns:mi="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
             x:Class="YeetMacro2.Platforms.Android.Views.ActionControl">
    <ContentView.Resources>
        <x:Double x:Key="ActionHeight">20.0</x:Double>
        <x:Double x:Key="ActionWidth">20.0</x:Double>
    </ContentView.Resources>
    <ContentView.HeightRequest>
        <Binding Source="{StaticResource ActionHeight}"
                 Converter="{conv:MultiplyByDensityConverter}" />
    </ContentView.HeightRequest>
    <ContentView.WidthRequest>
        <Binding Source="{StaticResource ActionWidth}"
                 Converter="{conv:MultiplyByDensityConverter}" />
    </ContentView.WidthRequest>
    <Grid
        BackgroundColor="Transparent"
        xct:TouchEffect.Command="{Binding ExecuteCommand}"
        xct:TouchEffect.LongPressCommand="{Binding OpenMenuCommand}"
        xct:TouchEffect.IsAvailable="{Binding ExecuteCommand, Converter={conv:NullToBoolConverter IsInverse=True}}"
        xct:TouchEffect.NativeAnimation="{Binding ExecuteCommand, Converter={conv:NullToBoolConverter IsInverse=True}}"
        xct:TouchEffect.NativeAnimationColor="#80FFFFFF"
        xct:TouchEffect.ShouldMakeChildrenInputTransparent="False"
        Padding="0">
        <Image Aspect="Fill" IsVisible="True">
            <Image.Source>
                <FontImageSource FontFamily="MaterialOutlined" Glyph="{x:Static mi:MaterialOutlined.Play_arrow}" Color="{StaticResource Primary}" />
            </Image.Source>
            <Image.Triggers>
                <DataTrigger TargetType="Image" Binding="{Binding State}" Value="{x:Static pvm:ActionState.Running}">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </Image.Triggers>
        </Image>
        <Image Aspect="Fill" IsVisible="True">
            <Image.Source>
                <FontImageSource FontFamily="MaterialOutlined" Glyph="{x:Static mi:MaterialOutlined.Stop}" Color="{StaticResource Primary}" />
            </Image.Source>
            <Image.Triggers>
                <DataTrigger TargetType="Image" Binding="{Binding State}" Value="{x:Static pvm:ActionState.Stopped}">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </Image.Triggers>
        </Image>
    </Grid>
</ContentView>
