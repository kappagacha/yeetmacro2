<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:YeetMacro2.ViewModels"
             xmlns:pvm="clr-namespace:YeetMacro2.Platforms.Android.ViewModels"
             x:DataType="pvm:ActionMenuViewModel"
             vm:ViewModelLocator.ViewModelType="{x:Type pvm:ActionMenuViewModel}"
             x:Class="YeetMacro2.Platforms.Android.Views.ActionMenu">
    <VerticalStackLayout VerticalOptions="Center" Spacing="10">
        <Button Text="Manage Patterns" Command="{Binding ManagePatternsCommand}" />
        <Button Text="Configure" Command="{Binding ConfigureCommand}" />
        <Button Text="Open Log" Command="{Binding OpenLogCommand}" />
        <Button Text="Screen Capture" Command="{Binding ScreenCaptureCommand}" />
        <Button Text="Exit" Command="{Binding ExitCommand}" BackgroundColor="Red" />
        <Label Text="{Binding CurrentResolution, StringFormat='Current Resolution: {0}'}" TextColor="{StaticResource Primary}">
            <Label.Triggers>
                <DataTrigger TargetType="Label" Binding="{Binding HasValidResolution}" Value="False">
                    <Setter Property="TextColor" Value="Red" />
                </DataTrigger>
            </Label.Triggers>
        </Label>
        <Label Text="{Binding OverlayArea, StringFormat='Overlay Area: {0}'}" TextColor="{StaticResource Primary}" />
        <Label Text="{Binding CurrentPackage, StringFormat='Current Package: {0}'}" TextColor="{StaticResource Primary}" />
        <!--<Label Text="{Binding DisplayCutoutTop, StringFormat='Display Cutout Top: {0}'}" TextColor="{StaticResource Primary}">
            <Label.Triggers>
                <DataTrigger TargetType="Label" Binding="{Binding HasCutoutTop}" Value="True">
                    <Setter Property="TextColor" Value="Red" />
                </DataTrigger>
            </Label.Triggers>
        </Label>-->
    </VerticalStackLayout>
</ContentView>
