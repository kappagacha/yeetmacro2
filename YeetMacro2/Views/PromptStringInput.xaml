<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:YeetMacro2.ViewModels"
             x:DataType="vm:PromptStringInputViewModel"
             vm:ViewModelLocator.ViewModelType="{x:Type vm:PromptStringInputViewModel}"
             x:Class="YeetMacro2.Controls.PromptStringInput">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="{Binding Message}" />
        <Entry x:Name="inputEntry" Text="{Binding Input}" />
        <HorizontalStackLayout>
            <Button Command="{Binding CancelCommand}" Text="Cancel" />
            <Button Command="{Binding OkCommand}" Text="Ok" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>