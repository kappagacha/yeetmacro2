<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:YeetMacro2.ViewModels"
             xmlns:conv="clr-namespace:YeetMacro2.Converters"
             x:DataType="vm:LogViewModel"
             vm:ViewModelLocator.ViewModelType="{x:Type vm:LogViewModel}"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="YeetMacro2.Views.LogView"
             xmlns:mi="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
             HeightRequest="20">
    <mct:DockLayout BackgroundColor="Blue">
        <Grid mct:DockLayout.DockPosition="Right" ColumnDefinitions="Auto,Auto">
            <Switch Grid.Column="0" IsToggled="{Binding IsRecording, Mode=TwoWay}">
                <Switch.Behaviors>
                    <mct:EventToCommandBehavior
                        EventName="Toggled"
                        Command="{Binding ToggleRecordingCommand}" />
                </Switch.Behaviors>
            </Switch>
            <Image Grid.Column="1" IsVisible="{Binding IsRecording, Converter={conv:InverseBoolConverter}}"
                   HeightRequest="{Binding Source={StaticResource IconHeight}, Converter={conv:MultiplyByDensityConverter}}"
                   WidthRequest="{Binding Source={StaticResource IconWidth}, Converter={conv:MultiplyByDensityConverter}}"
                   Aspect="Fill">
                <Image.Source>
                    <FontImageSource FontFamily="MaterialOutlined" Glyph="{x:Static mi:MaterialOutlined.Radio_button_checked}" Color="Gray" />
                </Image.Source>
            </Image>
            <Image Grid.Column="1" IsVisible="{Binding IsRecording}"
                   HeightRequest="{Binding Source={StaticResource IconHeight}, Converter={conv:MultiplyByDensityConverter}}"
                   WidthRequest="{Binding Source={StaticResource IconWidth}, Converter={conv:MultiplyByDensityConverter}}"
                   Aspect="Fill">
                <Image.Source>
                    <FontImageSource  FontFamily="MaterialOutlined" Glyph="{x:Static mi:MaterialOutlined.Radio_button_checked}" Color="Red" />
                </Image.Source>
            </Image>
        </Grid>
        <Label Text="{Binding Message}" />
    </mct:DockLayout>
</ContentView>
