		<PackageReference Include="UraniumUI.Icons.MaterialIcons" Version="2.5.0" />
		<PackageReference Include="UraniumUI.Material" Version="2.5.0" />
		<PackageReference Include="YantraJS.Core" Version="1.2.171" />
	</ItemGroup>

	<ItemGroup>
