<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net7.0-android;</TargetFrameworks>
    <LangVersion>10</LangVersion>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net7.0-windows10.0.19041.0</TargetFrameworks>
		<!-- Uncomment to also build the tizen app. You will need to install tizen by following this: https://github.com/Samsung/Tizen.NET -->
		<!-- <TargetFrameworks>$(TargetFrameworks);net7.0-tizen</TargetFrameworks> -->
		<OutputType>Exe</OutputType>
		<RootNamespace>YeetMacro2</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>

		<!-- Display name -->
		<ApplicationTitle>YeetMacro2</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.companyname.yeetmacro2</ApplicationId>
		<ApplicationIdGuid>f39eba8e-de18-4b85-818f-14aed042c433</ApplicationIdGuid>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" ForegroundScale="0.6" Color="#512BD4" TintColor="White" />

		<!-- Splash Screen -->
    <MauiSplashScreen Include="Resources\Splash\splash.svg" Color="#512BD4" TintColor="White" />

    <!-- Images -->
		<MauiImage Include="Resources\Images\*" />
    <MauiImage Update="Resources\Images\appicon.svg" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets (also remove the "Resources\Raw" prefix) -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="AutoMapper" Version="12.0.0" />
		<PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="12.0.0" />
		<PackageReference Include="Castle.Core" Version="5.1.0" />
		<PackageReference Include="CommunityToolkit.Maui" Version="3.1.0" />
		<PackageReference Include="CommunityToolkit.Maui.Markup" Version="2.1.0" />
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.0.0" />
		<PackageReference Include="Jint" Version="3.0.0-beta-2044" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.1" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.1" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="7.0.0" />
		<PackageReference Include="Serilog" Version="2.12.0" />
		<PackageReference Include="Serilog.Extensions.Logging" Version="3.1.0" />
		<PackageReference Include="Serilog.Sinks.Console" Version="4.1.0" />
		<PackageReference Include="SkiaSharp.Views.Maui.Controls" Version="2.88.3" />
		<PackageReference Include="System.Drawing.Common" Version="7.0.0" />
		<PackageReference Include="UraniumUI.Icons.FontAwesome" Version="2.1.4" />
		<PackageReference Include="UraniumUI.Icons.MaterialIcons" Version="2.1.4" />
		<PackageReference Include="UraniumUI.Material" Version="2.2.0-pre.1" />
	</ItemGroup>

	<ItemGroup>
	  <EditorConfigFiles Remove=".editorconfig" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Platforms\Android\Resources\xml\yeetmacro_config.xml" />
	  <None Remove="Resources\Images\appicon.svg" />
	  <None Remove="Resources\MacroSets\Disgaea RPG\Disgaea RPG_patterns.json" />
	  <None Remove="Resources\MacroSets\Disgaea RPG\Disgaea RPG_scripts.json" />
	  <None Remove="Resources\MacroSets\Disgaea RPG\Disgaea RPG_Settings.json" />
	  <None Remove="Resources\MacroSets\Konosuba FD\Konosuba FD_patterns.json" />
	  <None Remove="Resources\Splash\splash.svg" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="Resources\MacroSets\Disgaea RPG\Disgaea RPG_Patterns.json" />
	  <EmbeddedResource Include="Resources\MacroSets\Disgaea RPG\Disgaea RPG_scripts.json" />
	  <EmbeddedResource Include="Resources\MacroSets\Disgaea RPG\Disgaea RPG_Settings.json" />
	  <EmbeddedResource Include="Resources\MacroSets\Konosuba FD\Konosuba FD_patterns.json" />
	</ItemGroup>

	<ItemGroup>
	  <Reference Include="OpenCV">
	    <HintPath>Platforms\Android\Services\OpenCv\OpenCV.dll</HintPath>
	  </Reference>
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Views\LogView.xaml.cs">
	    <DependentUpon>LogView.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="Views\PatternView.xaml.cs">
	    <DependentUpon>PatternView.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="Platforms\Android\Views\ActionControl.xaml.cs">
	    <DependentUpon>ActionControl.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="Platforms\Android\Views\ActionMenu.xaml.cs">
	    <DependentUpon>ActionMenu.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="Platforms\Android\Views\DrawControl.xaml.cs">
	    <DependentUpon>DrawControl.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="Platforms\iOS\Services\PlatformServiceRegistrationHelper.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\MacCatalyst\Services\PlatformServiceRegistrationHelper.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\Tizen\Services\PlatformServiceRegistrationHelper.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\Windows\Services\PlatformServiceRegistrationHelper.cs">
	    <ExcludeFromCurrentConfiguration>false</ExcludeFromCurrentConfiguration>
	  </Compile>
	  <Compile Update="Platforms\Android\Views\PromptSelectOption.xaml.cs">
	    <DependentUpon>PromptSelectOption.xaml</DependentUpon>
	  </Compile>
	</ItemGroup>
  
	<ItemGroup>
	  <MauiXaml Update="Platforms\Android\Views\AndroidHomePage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\ImageView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\LogView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\PatternView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\PatternTreeView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Platforms\Android\Views\PromptSelectOption.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Platforms\Android\Views\PromptStringInput.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\ScriptsView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Pages\MacroManagerPage.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\SettingTreeView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Views\TreeView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	</ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net7.0-android')) != true">
    <MauiXaml Remove="**\Android\**\*.xaml" />
    <Compile Remove="**\Android\**\*.xaml.cs" />
    <None Include="**\Android\**\*.xaml.cs" Exclude="$(DefaultItemExcludes);$(DefaultExcludesInProjectFolder)" />
  </ItemGroup>

  <!--<ItemGroup Condition="$(TargetFramework.Contains('-windows')) != true">
    <MauiXaml Remove="**\Windows\**\*.xaml" />
    <Compile Remove="**\Windows\**\*.xaml.cs" />
    <None Include="**\Windows\**\*.xaml.cs" Exclude="$(DefaultItemExcludes);$(DefaultExcludesInProjectFolder)" />
  </ItemGroup>-->

  <ItemGroup>
    <None Update="Platforms\Windows\Ahk\userRectangle\userRectangle.exe">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
