<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:YeetMacro2.ViewModels"
             BindingContext="{StaticResource ActionMenuViewModel}"
             vm:ViewModelLocator.ViewModelType="{x:Type vm:ActionMenuViewModel}"
             x:Class="YeetMacro2.Controls.ActionMenu">
    <VerticalStackLayout VerticalOptions="Center" Spacing="10">
        <Button Text="Manage Patterns" Command="{Binding ManagePatternsCommand}" />
        <Button Text="Configure" Command="{Binding ConfigureCommand}" />
        <Button Text="Open Log" Command="{Binding OpenLogCommand}" />
    </VerticalStackLayout>
</ContentView>
