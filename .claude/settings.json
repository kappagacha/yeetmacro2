{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -NoProfile -Command \"Import-Module BurntToast; New-BurntToastNotification -Text 'Claude Code', 'Response complete'\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "^(?!Read|Grep|Glob|WebSearch|WebFetch|Task).*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -NoProfile -Command \"Import-Module BurntToast; New-BurntToastNotification -Text 'Claude Code', 'Executing tool'\""
          }
        ]
      }
    ]
  }
}
